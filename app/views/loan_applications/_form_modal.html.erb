<div class="modal-dialog">
  <!-- Modal content-->
  <div class="modal-content">

    <!-- Modal head -->
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Apply for a New Loan</h4>
    </div>

    <!-- Modal Body (form) -->
    <%= form_for @loan_app, remote: true do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>
        <div class="ajax-loader hide"><img src="ajax-loader.gif"></div>

        <div class="form-group">
          <%= f.label :amount, class:"control-label" %>
          <%= f.number_field :amount, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :down_payment, class: "control-label" %>
          <%= f.number_field :down_payment, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :interest, class: "control-label" %>
          <%= f.number_field :interest, class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Process My Loan", class: "btn btn-primary", data: { disable_with: "Processing your Loan..." } %>
        <%= link_to "Cancel", root_path, class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>