<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <!-- Trigger the modal with a button -->
    <%= link_to "Apply for a New Loan", new_loan_application_path, remote: true, class: "btn btn-info"%>

    <!-- Modal Container -->
    <div id="loan-form-modal" class="modal fade" role="dialog"></div>

    <div class="loan-apps-listing">
      <h3>Your Loan Application Lists</h3>
      <% @loan_apps.each do |loan_app| %>
        <div class="well col-md-12 custom-color">
          <div class="col-md-4 loan-info">Amount: $<%= loan_app.amount %></div>
          <div class="col-md-4 loan-info">Down Payment: $<%= loan_app.down_payment %></div>
          <div class="col-md-4 loan-info">Interest: <%= loan_app.interest %>%</div>
        </div>
      <% end %>
    </div>
  </div>
</div>

