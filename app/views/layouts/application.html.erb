<!DOCTYPE html>
<html>
<head>
  <title>GvApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "layouts/header" %>
  <div class="container">
    <%# bootstrap supports these 4 flash classes: success, info, warning, and danger %>
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, class: "alert alert-#{message_type}") do %>
        <%= message %>
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true"><sup>X</sup></span><span class="sr-only">Close</span></button>
      <% end %>
    <% end %>
    <%= yield %>
    <%# for debugging %>
    <%= debug(params) if Rails.env.development? %>
  </div>
</body>
</html>
